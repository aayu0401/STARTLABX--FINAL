rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
      // Main users collection for auth lookup
      match /users/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Startup users can read and write their own data
      match /startups/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        // Allow read access to other authenticated users for discovery
        allow read: if request.auth != null;
      }

      // Professional users can read and write their own data
      match /professionals/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        // Allow read access to other authenticated users for discovery
        allow read: if request.auth != null;
      }

      // User settings - private to each user
      match /user_settings/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Startup listings
      match /startup_listings/{listingId} {
        // Allow authenticated users to read all active listings
        allow read: if request.auth != null;
        // Only the founder can create, update, or delete their listings
        allow create, update, delete: if request.auth != null && 
          request.auth.uid == resource.data.founderId;
      }

      // Allow other collections as needed
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
}